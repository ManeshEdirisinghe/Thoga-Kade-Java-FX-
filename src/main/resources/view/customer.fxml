<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.customerController.CustomerFormController">
    <children>
        <Text layoutX="375.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer Management">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>

        <TextField fx:id="txtId" layoutX="50.0" layoutY="80.0" prefHeight="26.0" prefWidth="150.0" promptText="CustID (e.g. C001)" />
        <TextField fx:id="txtTitle" layoutX="220.0" layoutY="80.0" prefHeight="26.0" prefWidth="100.0" promptText="Title (Mr/Ms)" />
        <TextField fx:id="txtName" layoutX="340.0" layoutY="80.0" prefHeight="26.0" prefWidth="250.0" promptText="Customer Name" />
        <TextField fx:id="txtDob" layoutX="610.0" layoutY="80.0" prefHeight="26.0" prefWidth="150.0" promptText="DOB (YYYY-MM-DD)" />
        <TextField fx:id="txtSalary" layoutX="780.0" layoutY="80.0" prefHeight="26.0" prefWidth="170.0" promptText="Salary" />

        <TextField fx:id="txtAddress" layoutX="50.0" layoutY="120.0" prefHeight="26.0" prefWidth="250.0" promptText="Address" />
        <TextField fx:id="txtCity" layoutX="320.0" layoutY="120.0" prefHeight="26.0" prefWidth="150.0" promptText="City" />
        <TextField fx:id="txtProvince" layoutX="490.0" layoutY="120.0" prefHeight="26.0" prefWidth="150.0" promptText="Province" />
        <TextField fx:id="txtPostalCode" layoutX="660.0" layoutY="120.0" prefHeight="26.0" prefWidth="150.0" promptText="Postal Code" />

        <HBox alignment="CENTER" layoutX="50.0" layoutY="170.0" prefHeight="40.0" prefWidth="900.0" spacing="20.0">
            <children>
                <Button onAction="#btnAddOnAction" prefWidth="100.0" style="-fx-background-color: #2ecc71; -fx-cursor: hand;" text="Add" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font></Button>
                <Button onAction="#btnUpdateOnAction" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-cursor: hand;" text="Update" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font></Button>
                <Button onAction="#btnDeleteOnAction" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-cursor: hand;" text="Delete" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font></Button>
                <Button onAction="#btnClearOnAction" prefWidth="100.0" style="-fx-background-color: #95a5a6; -fx-cursor: hand;" text="Clear" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font></Button>
            </children>
        </HBox>

        <TableView fx:id="tblCustomerView" layoutX="30.0" layoutY="230.0" prefHeight="390.0" prefWidth="940.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="70.0" text="ID" />
                <TableColumn fx:id="colTitle" prefWidth="60.0" text="Title" />
                <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="colDob" prefWidth="100.0" text="DOB" />
                <TableColumn fx:id="colSalary" prefWidth="100.0" text="Salary" />
                <TableColumn fx:id="colAddress" prefWidth="150.0" text="Address" />
                <TableColumn fx:id="colCity" prefWidth="100.0" text="City" />
                <TableColumn fx:id="colProvince" prefWidth="100.0" text="Province" />
                <TableColumn fx:id="colPostalCode" prefWidth="100.0" text="Zip" />
            </columns>
        </TableView>
    </children>
</AnchorPane>