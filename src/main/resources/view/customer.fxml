<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerFormController">
    <children>
        <Text layoutX="364.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer Management">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Text>

        <TextField fx:id="txtId" layoutX="50.0" layoutY="100.0" prefWidth="150.0" promptText="Customer ID (C001)" />
        <TextField fx:id="txtTitle" layoutX="220.0" layoutY="100.0" prefWidth="100.0" promptText="Title (Mr/Miss)" />
        <TextField fx:id="txtName" layoutX="340.0" layoutY="100.0" prefWidth="250.0" promptText="Customer Name" />
        <TextField fx:id="txtDob" layoutX="610.0" layoutY="100.0" prefWidth="150.0" promptText="DOB (YYYY-MM-DD)" />
        <TextField fx:id="txtSalary" layoutX="780.0" layoutY="100.0" prefWidth="150.0" promptText="Salary" />

        <TextField fx:id="txtAddress" layoutX="50.0" layoutY="145.0" prefWidth="270.0" promptText="Address" />
        <TextField fx:id="txtCity" layoutX="340.0" layoutY="145.0" prefWidth="150.0" promptText="City" />
        <TextField fx:id="txtProvince" layoutX="510.0" layoutY="145.0" prefWidth="150.0" promptText="Province" />
        <TextField fx:id="txtPostalCode" layoutX="680.0" layoutY="145.0" prefWidth="120.0" promptText="Postal Code" />

        <Button layoutX="300.0" layoutY="200.0" onAction="#btnAddOnAction" prefWidth="100.0" text="ADD" />
        <Button layoutX="415.0" layoutY="200.0" onAction="#btnUpdateOnAction" prefWidth="100.0" text="UPDATE" />
        <Button layoutX="530.0" layoutY="200.0" onAction="#btnDeleteOnAction" prefWidth="100.0" text="DELETE" />
        <Button layoutX="645.0" layoutY="200.0" onAction="#btnClearOnAction" prefWidth="100.0" text="CLEAR" />

        <TableView fx:id="tblCustomer" layoutX="41.0" layoutY="264.0" prefHeight="350.0" prefWidth="920.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="colAddress" prefWidth="150.0" text="Address" />
                <TableColumn fx:id="colSalary" prefWidth="100.0" text="Salary" />
                <TableColumn fx:id="colCity" prefWidth="100.0" text="City" />
                <TableColumn fx:id="colProvince" prefWidth="120.0" text="Province" />
            </columns>
        </TableView>
    </children>
</AnchorPane>