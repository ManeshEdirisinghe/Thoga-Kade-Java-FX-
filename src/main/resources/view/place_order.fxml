<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="950.0" style="-fx-background-color: #f5f6fa;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.orderController.PlaceOrderFormController">
    <children>
        <Text fill="#2f3640" layoutX="353.0" layoutY="51.0" strokeType="OUTSIDE" strokeWidth="0.0" text="PLACE ORDER FORM">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Text>

        <HBox alignment="CENTER_LEFT" layoutX="40.0" layoutY="75.0" prefHeight="40.0" prefWidth="870.0" spacing="30.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Order ID :">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Label fx:id="lblOrderId" text="D001" textFill="#e84118">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Order Date :">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Label fx:id="lblOrderDate" text="2026-01-28" textFill="#2f3640">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </HBox>

        <HBox layoutX="40.0" layoutY="125.0" prefHeight="35.0" prefWidth="870.0" spacing="20.0">
            <children>
                <ComboBox fx:id="cmbCustomerId" prefWidth="180.0" promptText="Select Customer ID" style="-fx-background-radius: 5;" />
                <TextField fx:id="txtCustomerName" editable="false" prefWidth="250.0" promptText="Customer Name" style="-fx-background-radius: 5;" />
            </children>
        </HBox>

        <HBox layoutX="40.0" layoutY="180.0" prefHeight="35.0" prefWidth="870.0" spacing="15.0">
            <children>
                <ComboBox fx:id="cmbItemCode" prefWidth="150.0" promptText="Item Code" style="-fx-background-radius: 5;" />
                <TextField fx:id="txtDescription" editable="false" prefWidth="200.0" promptText="Description" style="-fx-background-radius: 5;" />
                <TextField fx:id="txtQtyOnHand" editable="false" prefWidth="100.0" promptText="QTY On Hand" style="-fx-background-radius: 5;" />
                <TextField fx:id="txtUnitPrice" editable="false" prefWidth="120.0" promptText="Unit Price" style="-fx-background-radius: 5;" />
                <TextField fx:id="txtQty" prefWidth="80.0" promptText="QTY" style="-fx-background-radius: 5;" />
            </children>
        </HBox>

        <Button layoutX="783.0" layoutY="225.0" mnemonicParsing="false" onAction="#btnAddToCartOnAction" prefHeight="30.0" prefWidth="127.0" style="-fx-background-color: #3498db; -fx-cursor: hand;" text="Add to Cart" textFill="WHITE">
            <font><Font name="System Bold" size="14.0" /></font>
        </Button>

        <TableView fx:id="tblCart" layoutX="40.0" layoutY="270.0" prefHeight="280.0" prefWidth="870.0" style="-fx-background-radius: 5;">
            <columns>
                <TableColumn fx:id="colCode" prefWidth="110.0" text="Item Code" />
                <TableColumn fx:id="colDescription" prefWidth="280.0" text="Description" />
                <TableColumn fx:id="colQty" prefWidth="100.0" text="QTY" />
                <TableColumn fx:id="colUnitPrice" prefWidth="180.0" text="Unit Price" />
                <TableColumn fx:id="colTotal" prefWidth="199.0" text="Total" />
            </columns>
        </TableView>

        <Label layoutX="40.0" layoutY="575.0" text="NET TOTAL :" textFill="#e84118">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>
        <Label fx:id="lblTotal" layoutX="190.0" layoutY="575.0" text="0.00">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>

        <Button layoutX="783.0" layoutY="575.0" mnemonicParsing="false" onAction="#btnPlaceOrderOnAction" prefHeight="40.0" prefWidth="127.0" style="-fx-background-color: #2ecc71; -fx-cursor: hand;" text="Place Order" textFill="WHITE">
            <font><Font name="System Bold" size="14.0" /></font>
        </Button>
    </children>
</AnchorPane>